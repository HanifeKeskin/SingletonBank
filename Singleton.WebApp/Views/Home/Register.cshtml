
@using Singleton.Entities.ValueObject
@model RegisterViewModel

@{
    /**/

    ViewBag.Title = "Singleton - Kayıt Sayfası";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/LoginSon.css" rel="stylesheet" />
    <link href="~/Content/validation-summary.css" rel="stylesheet" />
</head>

@using (Html.BeginForm())
{
<body>

    <link rel="stylesheet" href="https://use.fontawesome./releases/v5.5.0/css/all.css">
    <div class="container">
        <div class="card card-login mx-auto text-center bg-dark">
            <div class="card-header mx-auto bg-dark">
                <span> <img src="~/img/ssl-banka-logolar.png" class="w-75" alt="Logo"> </span><br />
                <span class="logo_title mt-5"> SINGLETON BANK  </span>

            </div>
            <div class="card-body">
                @Html.ValidationSummary(false)
                <form action="" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız", id = "name", maxlength="25" })
                        </div>


                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyadınız",id="soyad", maxlength="25" })
                        </div>


                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.TCKN, new { @class = "form-control", placeholder = "TC Kimlik Numaranız", id="tc", maxlength="11"})
                        </div>


                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.Adres, new { @class = "form-control", placeholder = "Adresiniz", maxlength="150" })
                        </div>


                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "Emailiniz" })
                        </div>


                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.TextBoxFor(model => model.TelNo, new { @class = "form-control", placeholder = "Telefon Numaranız" , id= "telno", maxlength="10"})
                        </div>


                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" , maxlength="6"})
                    </div>
                    <div class="form-group">
                        <input type="submit" name="btn" value="KAYIT OL" class="btn btn-outline-danger float-right login_btn">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
}

<script>

    $(document).ready(function () {
        $("#name").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (((charCode <= 93 && charCode >= 65) || (charCode <= 122 && charCode >= 97) || charCode == 8) || charCode == 350 || charCode == 351 || charCode == 304 || charCode == 286 || charCode == 287 || charCode == 231 || charCode == 199 || charCode == 305 || charCode == 214 || charCode == 246 || charCode == 220 || charCode == 252) {
                return true;
            }
            return false;
        });
        $("#soyad").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (((charCode <= 93 && charCode >= 65) || (charCode <= 122 && charCode >= 97) || charCode == 8) || charCode == 350 || charCode == 351 || charCode == 304 || charCode == 286 || charCode == 287 || charCode == 231 || charCode == 199 || charCode == 305 || charCode == 214 || charCode == 246 || charCode == 220 || charCode == 252) {
                return true;
            }
            return false;
        });
        $("#telno").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 48 && charCode <= 57) {
                return true;
            }
            return false;
        });
        $("#tc").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 48 && charCode <= 57 ) {
                return true;
            }
            return false;
        });
    });
</script>