                       </div>
                       /*<li class="nav-item">
                            <a class="nav-link" href="/Home/ShowProfile">PROFİLE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/EditProfile">Edit Musteri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Hesap/Index">Hesap İşlemleri</a>
                        </li>*/
                        
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Singleton Bank</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>