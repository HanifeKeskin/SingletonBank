@using Singleton.Entities.ValueObject;
@model ParaViewModel

@{
    ViewBag.Title = "Yatir";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <br />
    <br />
    <br />
    <h3>Yatırmak istediğiniz tutarı giriniz</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ParaHesapNo)
    @Html.HiddenFor(model => model.Bakiye)


    <div class="form-group">
        @Html.LabelFor(model => model.ParaHesapNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.ParaHesapNo, new { htmlAttributes = new { @class = "form-control", id = "hesap", maxlength = 13 } })
            @Html.ValidationMessageFor(model => model.ParaHesapNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Bakiye, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Bakiye, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Bakiye, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tutar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tutar, new { htmlAttributes = new { @class = "form-control", id = "tutar", maxlength = 10 } })
            @Html.ValidationMessageFor(model => model.Tutar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Para Yatır" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("İptal", "Index")
</div>


<script>

    $(document).ready(function () {
        $("#tutar").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode == 44 || charCode >= 48 && charCode <= 57 ) {
                return true;
            }
            return false;
        });
    });
    $(document).ready(function () {
        $("#hesap").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 48 && charCode <= 57) {
                return true;
            }
            return false;
        });
    });
</script>