
@model Singleton.Entities.Transfer

@{
    ViewBag.Title = "Havale";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <br />
    <br />
    <br />
    <h3>Göndermek istediğiniz tutarı ve hesap numarasını giriniz</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.GonderenHesapNo)

    <div class="form-group">
        @Html.LabelFor(model => model.GonderenHesapNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.GonderenHesapNo, new { htmlAttributes = new { @class = "form-control", id = "gonderen", maxlength = "13" } })
            @Html.ValidationMessageFor(model => model.GonderenHesapNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AliciHesapNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AliciHesapNo, new { htmlAttributes = new { @class = "form-control", id = "alici", maxlength = "13" } })
            @Html.ValidationMessageFor(model => model.AliciHesapNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tutar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tutar, new { htmlAttributes = new { @class = "form-control", id = "tutar", maxlength = 10 } })
            @Html.ValidationMessageFor(model => model.Tutar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Gönder" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("İptal", "Index")
</div>



<script>

    $(document).ready(function () {
        $("#tutar").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode == 44 || charCode >= 48 && charCode <= 57 ) {
                return true;
            }
            return false;
        });
    });
    $(document).ready(function () {
        $("#alici").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 48 && charCode <= 57) {
                return true;
            }
            return false;
        });
    });
    $(document).ready(function () {
        $("#gonderen").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode

            if (charCode >= 48 && charCode <= 57) {
                return true;
            }
            return false;
        });
    });
</script>