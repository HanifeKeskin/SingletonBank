@using Singleton.WebApp.Models
@model Singleton.Entities.HgsSatis

@{
    ViewBag.Title = "HgsSatis";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <br />
    <br />
    <br />
    <h3>İşlem yapmak istediğiniz hesabı seçiniz</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => CurrentSession.User.TCKN)
    @Html.HiddenFor(model => model.HgsNo)


    <div class="form-group">
        @Html.LabelFor(model => model.HgsNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.HgsNo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled"} })
            @Html.ValidationMessageFor(model => model.HgsNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HesapNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownListFor(model => model.HesapNo, new SelectList(ViewBag.hesaplar, "HesapNo", "HesapNo"), new { @class = "form-control" })*@
            @Html.DropDownListFor(model => model.HesapNo, new SelectList((System.Collections.IEnumerable)TempData["hesaplar"], "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.HesapNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tutar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tutar, new { htmlAttributes = new { @class = "form-control", id = "tutar", maxlength = 10 } })
            @Html.ValidationMessageFor(model => model.Tutar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Yükle" class="btn btn-default" />
        </div>
    </div>

</div>
}