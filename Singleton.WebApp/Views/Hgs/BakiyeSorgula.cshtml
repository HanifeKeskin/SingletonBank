@using Singleton.WebApp.Models
@using Singleton.Entities.ValueObject
@model HgsViewModel


@{
    ViewBag.Title = "BakiyeSorgula";
}

<div class="row">

    <div class="col-md-6 col-md-offset-3">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <br />
            <br />
            <h4>Bakiye Sorgula</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.HgsBakiye)
            @Html.HiddenFor(model => CurrentSession.User.TCKN)

            <div class="form-group">
                @Html.LabelFor(model => CurrentSession.User.TCKN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => CurrentSession.User.TCKN, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HgsBakiye, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HgsBakiye, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>


        </div>
        }

        <div>
            @Html.ActionLink("Geri Dön", "Index")
        </div>

        <div>
            @Html.ActionLink("Hgs Bakiye Yükle", "BakiyeYukle")
        </div>
    </div>


</div>

